<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:background="#7EC0EE"
        android:layout_weight="4">
          <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流 量 助 手"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            />
          <FrameLayout 
              android:id="@+id/cengdie"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
              
              
          </FrameLayout>

          <ImageButton
              android:id="@+id/toSideMenu"
              android:layout_width="18dp"
              android:layout_height="18dp"
              android:layout_alignBottom="@+id/title"
              android:layout_marginLeft="20dp"
              android:background="#00000000"
              android:src="@drawable/list_white2" />

          <ImageView
              android:id="@+id/circle"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:layout_marginTop="60dp"
              android:src="@drawable/new_white" 
              android:layout_centerHorizontal="true"
              />

          <TextView
              android:id="@+id/shoujixinghao"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/circle"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="23dp"
              android:text="手机型号"
              android:textColor="#FFFFFF"
              android:textSize="12sp" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:layout_below="@+id/circle"
              android:layout_marginTop="8dp"
               >
               <RelativeLayout 
               	android:layout_width="0dp"
               	android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7EC0EE"  
                android:layout_gravity="right"
                   >
                   <View 
                       android:layout_height="match_parent"
                       android:layout_width="1px"
                       android:background="#FFFFFF"
                       android:layout_marginBottom="5dp"
                       android:layout_alignParentRight="true"
                       />
			<RelativeLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    >
                   <TextView
                       android:id="@+id/total_amount"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:layout_marginTop="10dp"
                       android:text="1000"
                       android:textColor="#FFFFFF"
                       android:textSize="18sp"
                        />
                   
                   <TextView
                       android:id="@+id/zongedu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/total_amount"
                       android:layout_marginTop="4dp"
                       android:text="总额度" 
                       android:textColor="#FFFFFF"
                       android:textSize="14sp"
                       />
                   </RelativeLayout>
                
                 
               </RelativeLayout>
                <RelativeLayout 
               	android:layout_width="0dp"
               	android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7EC0EE"  
                
                   >
                   <View 
                       android:layout_height="match_parent"
                       android:layout_width="1px"
                       android:background="#FFFFFF"
                       android:layout_marginBottom="5dp"
                       android:layout_alignParentRight="true"
                       />
                     <View 
                       android:layout_height="match_parent"
                       android:layout_width="1px"
                       android:background="#FFFFFF"
                       android:layout_marginBottom="5dp"
                       
                       />
                     <RelativeLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    >

                     <TextView
                         android:id="@+id/used_amount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:textColor="#FFFFFF"
                         android:textSize="18sp"
                         android:text="100" />
   
                     <TextView
                         android:id="@+id/yiyongedu"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:layout_below="@+id/used_amount"
                         android:layout_marginTop="4dp"
                         android:text="已用额度"
                         android:textSize="14sp"
                         android:textColor="#FFFFFF"
                          />
                     </RelativeLayout>

                </RelativeLayout>
                 <RelativeLayout 
               	android:layout_width="0dp"
               	android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7EC0EE"   
              
                   >
                      <View 
                       android:layout_height="match_parent"
                       android:layout_width="1px"
                       android:background="#FFFFFF"
                       android:layout_marginBottom="5dp"
                       />
                      <RelativeLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    >
                   <TextView
                       android:id="@+id/unused_amount"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:text="900"
                       android:textColor="#FFFFFF"
                       android:textSize="18sp"
                        />
 
                   <TextView
                       android:id="@+id/shengyuedu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/unused_amount"
                       android:layout_marginTop="4dp"
                       android:text="剩余额度" 
                       android:textColor="#FFFFFF"
                       android:textSize="14sp"
                       /></RelativeLayout>
                 </RelativeLayout>
          </LinearLayout>

          <TextView
              android:id="@+id/phone_model"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/title"
              android:layout_marginTop="90dp"
              android:text="三星s7 edge"
              android:textColor="#FFFFFF"
              android:textSize="20sp" />
      
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" 
        android:background="#FFFFFF"
        >
	 <ListView
        android:id="@+id/interface_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
       />

    </RelativeLayout>

</LinearLayout>

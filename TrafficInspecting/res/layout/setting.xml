<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         >
         <TextView 
             android:id="@+id/setting_tv1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="本月最大额度:"
             android:textSize="16sp"
             android:textColor="#000000"
             android:layout_marginLeft="10dp"
             />
          <EditText
            android:id="@+id/setting_total"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/setting_tv1"
            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/setting_tv1"
            android:gravity="center_horizontal"
>

    </EditText>

          <TextView
              android:id="@+id/setting_tv2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/setting_total"
              android:layout_toRightOf="@+id/setting_total"
              android:text="M" />

</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
         >
         <TextView 
             android:id="@+id/setting_tv3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="本月已用额度:"
             android:textSize="16sp"
             android:textColor="#000000"
             android:layout_marginLeft="10dp"
             />
          <EditText
            android:id="@+id/setting_used"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/setting_tv3"
            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/setting_tv3"
            android:gravity="center_horizontal"
>

    </EditText>

          <TextView
              android:id="@+id/setting_tv4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/setting_used"
              android:layout_toRightOf="@+id/setting_used"
              android:text="M" />

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/setting_bt"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="确认设置"
            android:background="@drawable/submit_bt"
            android:textSize="16sp"
             />

    </LinearLayout>

</LinearLayout>
